{
  "name": "fastify-vue-mariadb-app",
  "version": "1.0.0",
  "description": "A full-stack application with Fastify, Vue, and MariaDB.",
  "main": "backend/index.js",
  "scripts": {
    "install-all": "npm install && cd frontend && npm install",
    "dev:backend": "nodemon backend/index.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "build": "cd frontend && npm run build",
    "start": "npm run build && node backend/index.js"
  },
  "dependencies": {
    "@fastify/static": "^7.0.4",
    "fastify": "^4.26.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0"
  }
}
